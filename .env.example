# ============================
# GV2-EDGE ENVIRONMENT VARIABLES
# ============================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ========= CORE APIs =========

# Grok API (https://x.ai)
GROK_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxx

# Finnhub API (https://finnhub.io)
FINNHUB_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx

# ========= IBKR CONNECTION =========
# Set USE_IBKR_DATA=True only if IB Gateway/TWS is running
# On headless servers (Hetzner CX33, etc.), keep False to use Finnhub
USE_IBKR_DATA=False

IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ========= TELEGRAM =========
# Create bot via @BotFather on Telegram

TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# ========= REDDIT API =========
# Get credentials at: https://www.reddit.com/prefs/apps
# 1. Click "Create App" or "Create Another App"
# 2. Choose "script" type
# 3. Set redirect URI to: http://localhost:8080

REDDIT_CLIENT_ID=xxxxxxxxxxxxxx
REDDIT_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REDDIT_USER_AGENT=GV2-EDGE/1.0

# ========= STOCKTWITS API =========
# Get access token at: https://api.stocktwits.com/developers
# Free tier: 200 requests/hour

STOCKTWITS_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
